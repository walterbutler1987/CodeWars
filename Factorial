public class Factorial {

  public int factorial(int n) {
    int fact;
    if (n < 0 || n > 12) {
            throw new IllegalArgumentException();
        } else {
            fact = 1;

            for(int i = 1; i <= n; ++i) {
                fact *= (long)i;
            }

            return fact;
        }
  }
}
