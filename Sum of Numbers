  public class Sum
  {
     public int GetSum(int a, int b)
     {
      int sum = 0;
        if(a == b){
            return 1;
        } else if(b < a){
            int temp = a;
            a = b;
            b = temp;
        }
       
       for(int i = a; i <= b; i++){
            sum += i;
        }

        return sum;
     }
  }
